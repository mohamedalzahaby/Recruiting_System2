<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterApplicant">
        <EditText
            android:id="@+id/UniIDField"
            android:inputType="datetime"
            android:hint="University ID ex.1612345"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/NameField"
            android:inputType="text"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textColorHint="@android:color/black"
            android:hint="Applicant Name ex.Ahmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/UniIDField"/>
        <EditText
            android:id="@+id/EmailField"
            android:inputType="textEmailAddress"
            android:hint="Email ex. someone@miuuegypt.edu.eg"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/black"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NameField"/>
        <EditText
            android:id="@+id/MobileField"
            android:inputType="text"
            android:layout_marginLeft="12dp"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="12dp"
            android:hint="Mobile No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EmailField"/>
        <EditText
            android:id="@+id/DateField"
            android:inputType="text"
            android:layout_marginLeft="12dp"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="12dp"
            android:hint="Date ex. 1-1-2020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/MobileField"/>
        <EditText
            android:id="@+id/FromField"
            android:inputType="text"
            android:layout_marginLeft="12dp"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="12dp"
            android:hint="From ex. 10:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DateField"/>
        <EditText
            android:id="@+id/ToField"
            android:inputType="text"
            android:layout_marginLeft="12dp"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="12dp"
            android:hint="To ex. 11:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/FromField"/>
        <TextView
            android:id="@+id/GenderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="22sp"
            android:text="Gender:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ToField"/>
        <RadioGroup
            android:id="@+id/Gender_Grp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/GenderTxt">
            <RadioButton
                android:id="@+id/male_btn"
                android:checked="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/female_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20sp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/AdrsSpinnerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="22sp"
            android:text="Address:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Gender_Grp"/>
        <Spinner
            android:id="@+id/AdrsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@id/AdrsSpinnerTxt"
            app:layout_constraintTop_toTopOf="@id/AdrsSpinnerTxt"
            android:entries="@array/Address"/>

        <TextView
            android:id="@+id/FacSpinnerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="22sp"
            android:text="Faculty:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AdrsSpinner"/>
        <Spinner
            android:id="@+id/FacSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@id/FacSpinnerTxt"
            app:layout_constraintTop_toTopOf="@id/FacSpinnerTxt"
            android:entries="@array/Faculty"/>

        <TextView
            android:id="@+id/CommitteeSpinnerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:textSize="22sp"
            android:text="Committee:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/FacSpinner"/>
        <Spinner
            android:id="@+id/CommitteeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:layout_constraintStart_toEndOf="@+id/CommitteeSpinnerTxt"
            app:layout_constraintTop_toTopOf="@id/CommitteeSpinnerTxt"
            android:entries="@array/Committee"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="Add"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CommitteeSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="Register"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>